<UserControl x:Class="MenuPlanner.Views.ClientView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MenuPlanner.Views"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="450">
    <Border BorderThickness="1" BorderBrush="Black">
        <Grid>
            <Label Name="ClientName" Width="150" HorizontalAlignment="Left" Content="{Binding Path=FullName}" />
            <Label Name="ClientPhoneNumber" Width="100" HorizontalAlignment="Left" Content="{Binding Path=Client.PhoneNumber}" Margin="150,0,0,0"></Label>
            <Label Name="ClientEmailAddress" Width="200" HorizontalAlignment="Left" Content="{Binding Path=Client.EmailAddress}" Margin="250,0,0,0"></Label>
        </Grid>
    </Border>
</UserControl>
